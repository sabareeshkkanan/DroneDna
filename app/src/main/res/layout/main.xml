<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    >


    <LinearLayout
        android:orientation="horizontal"
        android:background="@android:drawable/bottom_bar"
        android:paddingLeft="4.0dip"
        android:paddingTop="5.0dip"
        android:paddingRight="4.0dip"
        android:paddingBottom="1.0dip"
        android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:layout_below="@+id/TextView01">

        <ToggleButton android:text="ToggleButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/ledButton"
            android:textOn="L On"
            android:textOff="L Off"
            android:enabled="true">

        </ToggleButton>


        <ToggleButton android:text="ToggleButton"
            android:textOn="Arm On"
            android:textOff="Arm Off"
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/arm" android:enabled="true">

        </ToggleButton>
        <ToggleButton android:text="ToggleButton"

            android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/U" android:enabled="true">

        </ToggleButton>
        <ToggleButton android:text="ToggleButton"
            android:textOn="Ap On"
            android:textOff="Ap Off"
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/autoPilot" android:enabled="true">

        </ToggleButton>


    </LinearLayout>


    <SeekBar android:text="Throttle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="0"
        android:minHeight="20dp"
        android:background="#ffc440"
        android:padding="20dp"
        android:layout_margin="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"


        android:id="@+id/throttle" android:enabled="true"
        style="@style/AppTheme">

    </SeekBar>
    <SeekBar android:text="Rudder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
android:progress="50"
        android:minHeight="20dp"
        android:background="#ffc440"
        android:padding="20dp"
        android:layout_margin="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"


        android:id="@+id/rudder" android:enabled="true">

    </SeekBar>
    <SeekBar android:text="elevator"  android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="50"

        android:minHeight="20dp"
        android:background="#ffc440"
        android:padding="20dp"
        android:layout_margin="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/elevator" android:enabled="true">

    </SeekBar>
    <SeekBar android:text="aileron"  android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="50"
        android:minHeight="20dp"
        android:background="#ffc440"
        android:padding="20dp"
        android:layout_margin="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" android:id="@+id/aileron" android:enabled="true">

    </SeekBar>

</LinearLayout>